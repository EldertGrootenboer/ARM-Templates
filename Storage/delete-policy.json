{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the storage account for which we are setting the policies."
            }
        },
        "prefixMatch": {
            "type": "array",
            "metadata": {
                "description": "An array of strings for prefixes to be matched."
            },
            "defaultValue": []
        },
        "deleteAfterDays": {
            "type": "int",
            "metadata": {
                "description": "Integer value indicating the age in days before we delete."
            },
            "defaultValue": null
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Gets or sets a list of key value pairs that describe the resource."
            }
        }
    },
    "variables": {
        "apiVersion": "2019-04-01",
        "ruleName": "Retention",
        "ruleType": "Lifecycle",
        "blobType": "blockBlob"
    },
    "resources": [
        {
            "name": "[concat(parameters('storageAccountName'), '/default')]",
            "type": "Microsoft.Storage/storageAccounts/managementPolicies",
            "apiVersion": "[variables('apiVersion')]",
            "properties": {
                "policy": {
                    "rules": [
                        {
                            "name": "[variables('ruleName')]",
                            "type": "[variables('ruleType')]",
                            "definition": {
                                "filters": {
                                    "blobTypes": [
                                        "[variables('blobType')]"
                                    ],
                                    "prefixMatch": "[parameters('prefixMatch')]"
                                },
                                "actions": {
                                    "baseBlob": {
                                        "delete": {
                                            "daysAfterModificationGreaterThan": "[parameters('deleteAfterDays')]"
                                        }
                                    }
                                }
                            }
                        }
                    ]
                }
            },
            "tags": "[parameters('tags')]"
        }
    ]
}