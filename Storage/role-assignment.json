{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string"
        },
        "principalGuid": {
            "type": "string",
            "metadata": {
                "description": "The principal to assign the role to."
            }
        },
        "builtInRoleType": {
            "type": "string",
            "allowedValues": [
                "Owner",
                "Contributor",
                "Reader",
                "StorageBlobDataOwner",
                "StorageBlobDataContributor",
                "StorageBlobDataReader"
            ],
            "metadata": {
                "description": "Built-in role to assign."
            }
        },
        "roleNameGuid": {
            "type": "string",
            "metadata": {
                "description": "A new GUID used to identify the role assignment."
            }
        }
    },
    "variables": {
        "kind": "StorageV2",
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "accountType": "Standard_LRS",
        "apiVersionStorageAccount": "2018-02-01",
        "apiVersionRoleAssignments": "2018-09-01-preview"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts/providers/roleAssignments",
            "apiVersion": "[variables('apiVersionRoleAssignments')]",
            "name": "[concat(parameters('storageAccountName'), '/Microsoft.Authorization/', parameters('roleNameGuid'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
            ],
            "properties": {
                "roleDefinitionId": "[variables(parameters('builtInRoleType'))]",
                "principalId": "[parameters('principalGuid')]",
                "mode":"Incremental"
            }
        }
    ]
}