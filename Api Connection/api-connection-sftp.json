{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "connectionDisplayName": {
            "type": "string",
            "metadata": {
                "description": "The display name of the SFTP connection being created."
            }
        },
        "giveUpSecurityAndAcceptAnySshHostKey": {
            "type": "bool"
        },
        "hostName": {
            "type": "string",
            "metadata": {
                "description": "The address of the SFTP server."
            }
        },
        "folderPath": {
            "type": "string",
            "defaultValue": "/",
            "metadata": {
                "description": "The path to the FTP folder you want to listen to."
            }
        },
        "portNumber": {
            "type": "int",
            "defaultValue": 22,
            "metadata": {
                "description": "The port for the SFTP server."
            }
        },
        "sshHostKeyFingerprint": {
            "type": "string"
        },
        "sshPrivateKey": {
            "type": "securestring"
        },
        "sshPrivateKeyPassphrase": {
            "type": "securestring"
        },
        "userName": {
            "type": "string",
            "metadata": {
                "description": "The username for the SFTP server."
            }
        },
        "password": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the SFTP server."
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Gets or sets a list of key value pairs that describe the resource."
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "apiVersion": "2016-06-01",
        "connectionName": "sftp",
        "disableUploadFilesResumeCapability": false
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "name": "[variables('connectionName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[variables('location')]",
            "tags": "[parameters('tags')]",
            "properties": {
                "displayName": "[parameters('connectionDisplayName')]",
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourcegroup().location, '/managedApis/', variables('connectionName'))]"
                },
                "parameterValues": {
                    "disableUploadFilesResumeCapability": "[variables('disableUploadFilesResumeCapability')]",
                    "giveUpSecurityAndAcceptAnySshHostKey": "[parameters('giveUpSecurityAndAcceptAnySshHostKey')]",
                    "hostName": "[parameters('hostName')]",
                    "portNumber": "[parameters('portNumber')]",
                    "sshHostKeyFingerprint": "[parameters('sshHostKeyFingerprint')]",
                    "sshPrivateKey": "[parameters('sshPrivateKey')]",
                    "sshPrivateKeyPassphrase": "[parameters('sshPrivateKeyPassphrase')]",
                    "userName": "[parameters('userName')]",
                    "password": "[parameters('password')]"
                },
                "testLinks": [
                    {
                        "requestUri": "[concat('https://management.azure.com:443/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Web/connections/', variables('connectionName'), '/extensions/proxy/datasets/default/folders?api-version=2018-07-01-preview')]",
                        "method": "get"
                    }
                ]
            }
        }
    ]
}